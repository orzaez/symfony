{% extends 'layout_viewuser.html.twig' %}
{% block body %}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ 'Mis Tareas'|trans }}</h2>
			</div>
			<div class="table-responsive">  
                <table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>ID</th>
                            <th>{{'Titulo'|trans}}</th>
                            <th>{{'Descripci√≥n'|trans}}</th>
                            <th>{{'Usuario'|trans}}</th>
                            <th>{{'Creado'|trans}}</th>
                            <th>{{'Modificado'|trans}}</th>
						</tr>
					</thead>
					<tbody>
