{% extends 'layout_login.html.twig' %}
{% block body %}
        <div class="body">
            <div class="main-block">
                <div class="title">
                    <h3>{{'Identificarse'|trans}}</h3>
                </div>
                <div class="form-group">
                    <form action="{{ path('test_user_login_check') }}" method="post" class="main">
                        {% if error %}
                            <div class="text-danger">
                            <p>
                                <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                            </p>
                            </div>
                        {% endif %}
                        <div class="col-sm-12">
                            <hr>
                            <div>
                                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder={{'Usuario'|trans}} required autofocus />
                            </div>
                            <br>
                            <div class="">
                                <input type="password" id="password" class="form-control" name="_password" placeholder={{'ContraseÃ±a'|trans}} required />
                            </div>
                            <hr>
                            <button type="submit" class="btn btn-lg btn-block">{{ 'Identificarse'|trans }}</button>                
                    </form>
                </div>
            </div>
        </div>
{% endblock %}